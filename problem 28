package array;

import java.util.Scanner;

public class Oneorfour {

	public static void main(String[] args) {
		Scanner sc=new Scanner(System.in);
		int n=sc.nextInt();
		boolean c=true;
		int[] a=new int[n];
		for(int i=0;i<n;i++) {
			a[i]=sc.nextInt();
			if(a[i]!=1 && a[i]!=4) {
				c=false;
				break;
			}
			
		}
		System.out.println(c);
		
		
	}
}
		
