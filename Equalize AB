import java.util.Scanner;

class Main {
    
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        
        
        int a = sc.nextInt();
        int b = sc.nextInt();
        int x = sc.nextInt();
        
       
        int diff = Math.abs(a - b);
        
        
        if (diff % (2 * x) == 0) {
            System.out.println("Yes");
        } else {
            System.out.println("No");
        }
        
        
    }
    
}
