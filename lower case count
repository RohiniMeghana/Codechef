import java.util.*;
class HelloWorld {
    public static void main(String[] args) {
        Scanner sc=new Scanner(System.in);
        String s=sc.next();
        int c=0;
        String l="";
        for(int i=0;i<s.length();i++){
            if(Character.isLowerCase(s.charAt(i))){
                c++;
                l+=s.charAt(i);
            }
        }
         System.out.println(l);
        System.out.println(c);
}
}
