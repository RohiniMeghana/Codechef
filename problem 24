import java.util.*;
import java.lang.*;
import java.io.*;

class Codechef
{
	public static void main (String[] args) throws java.lang.Exception
	{
		Scanner sc=new Scanner(System.in);
	int t=sc.nextInt();
	for(int i=0;i<t;i++)
	{
	    int c=0;
	    int e=0;
	    int n=sc.nextInt();
	    c=n/7;
	    if((n%7)!=1 && (n%7)!=0)
	    {
	        e=1;
	    }
	    c+=e;
	    System.out.println(c);
	}

	}
}

