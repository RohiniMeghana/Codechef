import java.util.*;

class HelloWorld {
    public static void main(String[] args) {
       Scanner sc=new Scanner(System.in);
       int r=sc.nextInt();
       for(int i=r;i>0;i--){
           for(int j=r-i;j>0;j--){
               System.out.print(" ");
           }
          for(int j=1;j<=i;j++){
              System.out.print("*");
          }
          System.out.println("");
           }
           
       }
    }
